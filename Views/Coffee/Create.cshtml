@using WebApplication2.Models
@model WebApplication2.Models.Coffee

@{
    ViewBag.Title = "title";
    Layout = "_CoffeeLayout";
}

<link href="~/css/CoffeeStyle.css" rel="stylesheet" type="text/css" />

<h1 style="margin-bottom: 10px"> Add Types of Coffee</h1>

@using (Html.BeginForm("CreateCoffeeForm", "Coffee", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div>

        <h4>Create  Coffee</h4>

        @Html.ValidationSummary(true)
        @* @Html.HiddenFor(model => model.Id) *@
        <div class="form-group">
            @Html.LabelFor(model => model.CoffeeId)
            @Html.EditorFor(model => model.CoffeeId)
            @Html.ValidationMessageFor(model => model.CoffeeId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RoastType)
            @Html.EditorFor(model => model.RoastType)
            @Html.ValidationMessageFor(model => model.RoastType)
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>

    </div>
}

<div>
    end
</div>


