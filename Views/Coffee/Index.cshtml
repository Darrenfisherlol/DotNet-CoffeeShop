
@model IEnumerable<WebApplication2.Models.Coffee>

<link href="~/css/UserStyle.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "title";
    Layout = "_CoffeeLayout";
}

<h1 style="margin-bottom: 10px"> Coffee Home </h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Coffee Name</th>
                <th>Category</th>
                <th>Temperature</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var coffee in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(coffeeList => coffee.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(coffeeList => coffee.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(coffeeList => coffee.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(coffeeList => coffee.Temp) 
                        </td>
                        <td>
                            @Html.DisplayFor(coffeeList => coffee.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(coffeeList => coffee.Price)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@coffee.Id">Edit</a>
                            @* <a asp-action="Details" asp-route-id="@customer.Id">Details</a> *@
                            <a asp-action="Delete" asp-route-id="@coffee.Id">Delete</a>
                        </td>
                    </tr>    
                }
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-area="" asp-controller="Coffee" asp-action="Create"> Create </a>
</div>

