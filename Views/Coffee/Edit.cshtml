@model WebApplication2.Models.Coffee

@{
    ViewBag.Title = "Edit coffee";
    Layout = "_CoffeeLayout";
}

<link href="~/css/CoffeeStyle.css" rel="stylesheet" type="text/css" />


<h1 style="margin-bottom: 20px">Edit Coffee</h1>

@using (Html.BeginForm("EditCoffee", "Coffee", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.CoffeeId)
        @Html.EditorFor(model => model.CoffeeId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.RoastType, new { @class = "form-label fw-bold" })
        @Html.DropDownListFor(model => model.RoastType,
            new SelectList(new[] { "Light", "Medium", "Dark" }),
            new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.RoastType, "", new { @class = "text-danger" })
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
    @Html.ActionLink("Cancel", "Index", "Coffee", null, new { @class = "btn btn-secondary" })

}