@model WebApplication2.Models.Customer

@{
    ViewBag.Title = "Create a customer";
    Layout = "_CoffeeLayout";
}

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- jQuery UI for Datepicker -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

<link href="~/css/CustomerStyle.css" rel="stylesheet" type="text/css" />


<h1 class="mb-4">Add a new Customer</h1>

@using (Html.BeginForm("CreateCustomerForm", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="card p-4 shadow-sm">
        <h4 class="mb-3">Create Coffee</h4>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.FirstName, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Enter customer first name" })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.LastName, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(model => model.LastName, new { @class = "form-control", rows = "3", placeholder = "Enter customer last name" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Email, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(model => model.Email, new { @class = "form-control", rows = "3", placeholder = "Enter email" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Phone, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(model => model.Phone, new { @class = "form-control", rows = "3", placeholder = "Enter phone number" })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.JoinDate, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.JoinDate, new { @class = "form-control", placeholder = "Select a date", type = "date" })
            @Html.ValidationMessageFor(model => model.JoinDate, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Index", "Coffee")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
}

<div>
    end
</div>


<script>
    $(document).ready(function() {
        // Initialize the jQuery UI datepicker
        $('input[type="date"]').datepicker({
            dateFormat: 'yy-mm-dd'  // Set the format as needed
        });
    });
</script>