@model WebApplication2.Models.Customer

@{
    ViewBag.Title = "title";
    Layout = "_CoffeeLayout";
}

<link href="~/css/CoffeeStyle.css" rel="stylesheet" type="text/css" />


<h1 style="margin-bottom: 10px"> Edit Customer </h1>


<div>
   
    @if (Model == null)
    {
        <form asp-action="EditCustomer" method="get">

            <div class="form-group">
                <label asp-for="Id">Enter Customer Id:</label>
                <input type="number" name="Id" class="form-control" required="required"/>
            </div>
            <button type="submit" class="btn btn-primary"> Find Customer Id </button>
        </form>
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div >
                @TempData["ErrorMessage"]
            </div>
        }
    }
    else
    {
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id"/>

            <div class="form-group">
                <label asp-for="FistName"></label>
                <input asp-for="FistName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary"> Save Changes </button>
        </form>
    }

</div>

<div>
    edit done
</div>