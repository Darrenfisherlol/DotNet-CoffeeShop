@model WebApplication2.Models.Customer

@{
    ViewBag.Title = "title";
    Layout = "_CoffeeLayout";
}

<link href="~/css/CoffeeStyle.css" rel="stylesheet" type="text/css" />


<h1 style="margin-bottom: 10px"> Edit Customer </h1>


<div>
    
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="CustomerId"/>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control"/>
        </div>

        <input type="hidden" asp-for="JoinDate"/>

        <button type="submit" class="btn btn-primary"> Save Changes </button>
        <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Cancel</a>

    </form>
</div>

<div>
    edit done
</div>