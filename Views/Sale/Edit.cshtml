@model WebApplication2.Models.Sale

@{
    ViewBag.Title = "title";
    Layout = "_CoffeeLayout";
}

<link href="~/css/CoffeeStyle.css" rel="stylesheet" type="text/css" />


<h1 style="margin-bottom: 10px"> Edit Sale </h1>


<div>
   
    @if (Model == null)
    {
        <form asp-action="Edit" method="get">

            <div class="form-group">
                <label asp-for="Id">Enter Sale Id:</label>
                <input type="number" name="Id" class="form-control" required="required"/>
            </div>
            <button type="submit" class="btn btn-primary"> Find Sale Id </button>
        </form>
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div >
                @TempData["ErrorMessage"]
            </div>
        }
    }
    else
    {
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id"/>

            <div class="form-group">
                <label asp-for="CustomerId"></label>
                <input asp-for="CustomerId" class="form-control"/>
            </div>
            <div class="form-group">
                @* <label asp-for="CoffeeId"></label> *@
                @* <input asp-for="CoffeeId" class="form-control"/> *@
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="OrderDateTime"></label>
                <input asp-for="OrderDateTime" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary"> Save Changes </button>
        </form>
    }

</div>

<div>
    edit done
</div>

