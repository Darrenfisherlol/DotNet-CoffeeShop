@model WebApplication2.Models.OrderDetail

@{
    ViewBag.Title = "Order Detail Edit Page";
    Layout = "_CoffeeLayout";
}

<link href="~/css/OrderDetailStyle.css" rel="stylesheet" type="text/css" />

<h1 style="margin-bottom: 10px"> Edit Order Detail </h1>


<div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="OrderDetailId"/>

        <div class="form-group">
            <label asp-for="OrderId"></label>
            <input asp-for="OrderId" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="MenuItemId"></label>
            <input asp-for="MenuItemId" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary"> Save Changes </button>
        <a href="@Url.Action("Index", "OrderDetail")" class="btn btn-secondary">Cancel</a>

    </form>
</div>

<div>
    edit done
</div>