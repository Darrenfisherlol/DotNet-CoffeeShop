@model WebApplication2.Models.OrderDetail

@{
    ViewBag.Title = "title";
    Layout = "_CoffeeLayout";
}

<link href="~/css/CoffeeStyle.css" rel="stylesheet" type="text/css" />

<h1 style="margin-bottom: 10px"> Edit Order </h1>

<div>
   
    @if (Model == null)
    {
        <form asp-action="EditOrder" method="get">

            <div class="form-group">
                <label asp-for="OrderDetailId">Enter Order Detail Id:</label>
                <input type="number" name="Id" class="form-control" required="required"/>
            </div>
            <button type="submit" class="btn btn-primary"> Find OrderDetail Id </button>
        </form>
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div >
                @TempData["ErrorMessage"]
            </div>
        }
    }
    else
    {
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="OrderDetailId"/>

            <div class="form-group">
                <label asp-for="OrderId"></label>
                <input asp-for="OrderId" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="MenuItemId"></label>
                <input asp-for="MenuItemId" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary"> Save Changes </button>
        </form>
    }

</div>

<div>
    edit done
</div>c