@model WebApplication2.Models.OrderDetail


@{
    ViewBag.Title = "Order Details";
    Layout = "_CoffeeLayout";
}

<link href="~/css/OrderStyle.css" rel="stylesheet" type="text/css" />

<h1 style="margin-bottom: 20px">Order Details</h1>

<div class="order-details-container">
    <div class="order-image">
        <img src="~/images/order-image.jpg" alt="order Image" class="img-fluid" />
    </div>

    <div class="order-info">
        <h2>@Model.OrderDetailId</h2>
        <div class="order-meta">
            <span><strong>MenuItem:</strong> @Model.MenuItem</span>
            <span><strong>Price:</strong> @Model.Price</span>
            <span><strong>Quantity:</strong> @Model.Quantity</span>
            <span><strong>OrderId:</strong> @Model.OrderId</span>
        </div>
    </div>
</div>

<footer>
    footer content
</footer>

