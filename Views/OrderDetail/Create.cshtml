@model WebApplication2.Models.OrderDetail

@{
    ViewBag.Title = "title";
    Layout = "_CoffeeLayout";
}

<h2>Create Order Details</h2>

@using (Html.BeginForm("CreateCustomerForm", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div>
        
        <h4>Create a OrderDetail</h4>
        
        @Html.ValidationSummary(true)
        @* @Html.HiddenFor(model => model.Id) *@
        <div class="form-group">
            @Html.LabelFor(model => model.OrderDetailId)
            @Html.EditorFor(model => model.OrderDetailId)
            @Html.ValidationMessageFor(model => model.OrderDetailId)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.OrderId)
            @Html.EditorFor(model => model.OrderId)
            @Html.ValidationMessageFor(model => model.OrderId)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MenuItemId)
            @Html.EditorFor(model => model.MenuItemId)
            @Html.ValidationMessageFor(model => model.MenuItemId)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantity)
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Price)
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        
    </div>
}

<div>
    end
</div>