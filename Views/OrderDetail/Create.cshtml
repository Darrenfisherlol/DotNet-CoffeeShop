@model WebApplication2.Models.OrderDetail

@{
    ViewBag.Title = "Create Order Detail";
    Layout = "_CoffeeLayout";
}

<link href="~/css/OrderDetailStyle.css" rel="stylesheet" type="text/css" />


<h1 class="mb-4">Add a new OrderDetail</h1>

@using (Html.BeginForm("CreateOrderDetailForm", "OrderDetail", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="card p-4 shadow-sm">
        <h4 class="mb-3">Create OrderDetail</h4>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.OrderId, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.OrderId, new { @class = "form-control", placeholder = "Enter customer first name" })
            @Html.ValidationMessageFor(model => model.OrderId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.MenuItemId, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(model => model.MenuItemId, new { @class = "form-control", rows = "3", placeholder = "Enter customer last name" })
            @Html.ValidationMessageFor(model => model.MenuItemId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Quantity, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(model => model.Quantity, new { @class = "form-control", rows = "3", placeholder = "Enter email" })
            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Price, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(model => model.Price, new { @class = "form-control", rows = "3", placeholder = "Enter phone number" })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
        

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Index", "OrderDetail")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
}

<div>
    end
</div>
