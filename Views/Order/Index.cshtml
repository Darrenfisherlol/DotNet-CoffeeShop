@model IEnumerable<WebApplication2.Models.Order>


@{
    ViewBag.Title = "title";
    Layout = "_CoffeeLayout";
}


<h1 style="margin-bottom: 10px"> Order Detail Home </h1>

<div>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>SaleId</th>
            <th>CoffeeID</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var order in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(orderList => order.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(orderList => order.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(orderList => order.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(orderList => order.Price)
                    </td>
                    @* <td> *@
                    @*     @Html.DisplayFor(saleList => sales.OrderDetails) *@
                    @* </td> *@
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.OrderId">Edit</a>
                        @* <a asp-action="Details" asp-route-id="@customer.Id">Details</a> *@
                        <a asp-action="Delete" asp-route-id="@order.OrderId">Delete</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
