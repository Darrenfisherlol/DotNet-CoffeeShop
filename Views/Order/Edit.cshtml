@model WebApplication2.Models.Order

@{
    ViewBag.Title = "Order Edit Page";
    Layout = "_CoffeeLayout";
}

<link href="~/css/OrderStyle.css" rel="stylesheet" type="text/css" />


<h1 style="margin-bottom: 10px"> Edit Order </h1>

<div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="OrderId"/>

        <div class="form-group">
            <label asp-for="CustomerId"></label>
            <input asp-for="CustomerId" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="OrderDate"></label>
            <input asp-for="OrderDate" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"/>
        </div>
        
        <button type="submit" class="btn btn-primary"> Save Changes </button>
        <a href="@Url.Action("Index", "Order")" class="btn btn-secondary">Cancel</a>

    </form>
</div>

<div>
    edit done
</div>